{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@public/*" : ["public/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.mts",
    "**/*.tsx",
    "**/*.js",
    "**/*.mjs",
    "**/*.jsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
  ]
}